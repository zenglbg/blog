{
  "compilerOptions": {
    "isolatedModules": false,
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@redux/*": ["./src/lib/redux/*"],
       
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  }
}


