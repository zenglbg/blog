{
  "verbose": false,
  "debug": false,
  "exec": "ts-node/register ./pages/app.ts",
  "ignore": [
    "mochawesome-report",
    "node_modules",
    "./test",
    "**/*.d.ts",
    "*.test.ts",
    "*.spec.ts",
    "fixtures/*",
    "test/**/*",
    "docs/*"
  ],
  "events": {
    "restart": ""
  },
  "watch": ["src", "pages"],
  "ext": "ts tsx",
  "inspect": true
}
